{
  "compilerOptions": {
    "rootDirs": [
      "./"
    ],
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  }
}
